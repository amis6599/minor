<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterStudentServlet</servlet-name>
        <servlet-class>com.servlets.RegisterStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterTeacherServlet</servlet-name>
        <servlet-class>com.servlets.RegisterTeacherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoticeUploadServlet</servlet-name>
        <servlet-class>com.servlets.NoticeUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>com.servlets.SignOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentUploadServlet</servlet-name>
        <servlet-class>com.servlets.AssignmentUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignmentDownloadServlet</servlet-name>
        <servlet-class>com.servlets.AssignmentDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterStudentServlet</servlet-name>
        <url-pattern>/registerstudentservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterTeacherServlet</servlet-name>
        <url-pattern>/registerteacherservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoticeUploadServlet</servlet-name>
        <url-pattern>/noticeuploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/SignOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentUploadServlet</servlet-name>
        <url-pattern>/AssignmentUploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentDownloadServlet</servlet-name>
        <url-pattern>/AssignmentDownloadServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
